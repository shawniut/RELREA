<script type="text/javascript">



$(function(){
	createReadinessOverTimeChart("readiness-over-time", <%= get_data%>,"Readiness Over Time");

});

function createReadinessOverTimeChart(container, series_data,mf_title){
	
	chart = new Highcharts.Chart({
		chart: {
                renderTo: container,
        },
		title: {
                text: mf_title,
                x: -20 //center
        },
	    xAxis: {
	    	title: {
                    text:"Development Time (days)"
                },
	       tickInterval:10,

	    },
	    
	    yAxis: {
	    	title: {
                    text:"Readiness"
                },
	        max: 1,
	        min:0
	    },

	    series: [{
	        data:series_data  
	    }],

	    legend: {
            enabled:false    
        },

         plotOptions: {
                series: {
                    cursor: 'pointer',
                    point: {
                        events: {
                            click: function (e) {

                            	$.ajax({
                            		type: "POST",
                            		url: "/dashboard/23/save",
                            		data: { days: e.point.x }
                            	});
                               //alert("I am here"+ e.point.x+"-"+ e.point.y);
                            }
                        }
                    },
                    marker: {
                        lineWidth: 1
                    }
                }
            },
	});
}






</script>
