

<div class ="page-title">
		<a class="title-text"><%=@Project.name%>::Settings</a>
</div>

<div id = "settings-container">
	<div class="individual-settings-container">
		<div class="settings-title">
			<p>Project info</p>
		</div>
		<div class="settings-desc">
			<p>Manage project info</p>
		</div>
		<div class="status">
			<% if @Project.info != nil %>
				<div class = "green"></div>
			<%else%>
				<div class = "red"></div>
			<%end%>
		</div>
		<div class="settings-edit">
			<p><%=link_to "Edit",  {:controller => "infos", :action=> "index", :id => @Project.id}, :method=>"POST", :remote=>"true" %></p>
		</div>
		<div id= "project-info-panel">
		</div>
	</div>
	<div class="individual-settings-container">

		<div class="settings-title">
			<p>Readiness Attributes</p>
		</div>
		<div class="settings-desc">
			<p>Manage Readiness Attributes</p>
		</div>
		
		<div class="status">
			<% if @Project.rattributes.any? %>
				<div class = "green"></div>
			<%else%>
				<div class = "red"></div>
			<%end%>
		</div>
		<div class="settings-edit">
			<p><%=link_to "Edit",  {:controller => "data_service/datasources", :action=> "show", :id =>  @Project.id}, :method=>"POST", :remote=>"true" %></p>
		</div>
		<div id= "attributes-panel">
			
		</div>
	</div>
	<div class="individual-settings-container">

		<div class="settings-title">
			<p>Membership Function</p>
		</div>
		<div class="settings-desc">
			<p>Manage Membership Function</p>
		</div>
		<div class="status">
			<% if (has_mf @Project) == true %>
				<div class = "green"></div>
			<%else%>
				<div class = "red"></div>
			<%end%>
		</div>
		<div class="settings-edit">
			<p><%=link_to "Edit",  {:controller => "mfunctions", :action=> "show", :id =>  @Project.id}, :method=>"POST", :remote=>"true" %></p>
		</div>
		<div id= "mf-panel">
		</div>
	</div>
	<div class="individual-settings-container">
		<div class="settings-title">
			<p>Relative Weights</p>
		</div>
		<div class="settings-desc">
			<p>Manage Relative Weights</p>
		</div>
		<div class="status">
			<% if (has_weights @Project) == true %>
				<div class = "green"></div>
			<%else%>
				<div class = "red"></div>
			<%end%>
		</div>
		
		<div class="settings-edit">
			<p><%=link_to "Edit",  {:controller => "weights", :action=> "show", :id =>  @Project.id}, :method=>"POST", :remote=>"true" %></p>
		</div>
		<div id= "weights-panel">
		</div>
	</div>
	<div class="individual-settings-container">
		<div class="settings-title">
			<p>Past Releases</p>
		</div>
		<div class="settings-desc">
			<p>Manage Past Releases</p>
		</div>
		<div class="status">
			<% if @Project.releases.any?%>
				<div class = "green"></div>
			<%else%>
				<div class = "red"></div>
			<%end%>
		</div>
		<div class="settings-edit">
			<p><%=link_to "Edit",  {:controller => "releases", :action=> "index", :id =>  @Project.id}, :method=>"POST", :remote=>"true" %></p>
		</div>
		<div id= "releases-panel">
		</div>
	</div>
	<div class="individual-settings-container">
		<div class="settings-title">
			<p>Collect data files</p>
		</div>
		<div class="settings-desc">
			<p>Manage raw files</p>
		</div>
		<div class="status">
			<% if @Project.raw_files_downloaded?%>
				<div class = "green"></div>
			<%else%>
				<div class = "red"></div>
			<%end%>
		</div>
		<div class="settings-edit">
			<p><%=link_to "Edit",  {:controller => "raw_files", :action=> "index", :id =>  @Project.id}, :method=>"POST", :remote=>"true" %></p>
		</div>
		<div id= "raw-files-panel">
		</div>
	</div>

</div>


<script type="text/javascript">
	function hideEditPanel(button) {
  		button.parentNode.parentNode.parentNode.style.display = 'block';
  		button.parentNode.parentNode.style.display = 'none';
	}
</script>

<script type="text/javascript">
	function hideDiv(element) {
  		element.parentNode.parentNode.style.display = 'none';
	}
</script>


